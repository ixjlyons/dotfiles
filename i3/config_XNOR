bindsym Ctrl+Shift+x exec cmus-remote -u
bindsym XF86AudioRaiseVolume exec amixer sset Master 1%+
bindsym XF86AudioLowerVolume exec amixer sset Master 1%-
bindsym XF86ScreenSaver exec i3lock -c 021a2d
bindsym XF86Sleep exec i3lock -c 021a2d && sudo pm-suspend
bindsym Mod4+f exec pcmanfm

# rolling through workspaces
