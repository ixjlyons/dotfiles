client.focused          #021a2d #021a2d #aaaaaa #2f4d70
client.focused_inactive #18191b #18191b #888888 #444444
client.unfocused        #0a0a0a #0a0a0a #666666 #444444
client.urgent           #2f343a #900000 #ffffff #900000


#
# custom keybindings
