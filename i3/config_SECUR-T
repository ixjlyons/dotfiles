#
# general settings
#

set $font Inconsolata 11
set $barfont Inconsolata 11

set $mod Mod1
set $win Mod4
font pango: $font
focus_follows_mouse no
floating_modifier $mod

# i3-gaps
for_window [class="^.*"] border pixel 3
gaps inner 8
gaps outer 5
#smart_gaps on

set $wsr1 "1"
set $wsr2 "2"
set $wsr3 "3"
set $wsr4 "4"
set $wsr5 "5"
set $wsr6 "6"
set $wsr7 "7"
set $wsr8 "8"
set $wsr9 "9"

set $wsl1 "a"
set $wsl2 "b"
set $wsl3 "c"
set $wsl4 "d"
set $wsl5 "e"
set $wsl6 "f"
set $wsl7 "g"
set $wsl8 "h"
set $wsl9 "i"


#
# navigation
#

# move to other containers in the workspace
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# switch to workspace
bindsym $mod+1 workspace $wsr1
bindsym $mod+2 workspace $wsr2
bindsym $mod+3 workspace $wsr3
bindsym $mod+4 workspace $wsr4
bindsym $mod+5 workspace $wsr5
bindsym $mod+6 workspace $wsr6
bindsym $mod+7 workspace $wsr7
bindsym $mod+8 workspace $wsr8
bindsym $mod+9 workspace $wsr9

bindsym $win+1 workspace $wsl1
bindsym $win+2 workspace $wsl2
bindsym $win+3 workspace $wsl3
bindsym $win+4 workspace $wsl4
bindsym $win+5 workspace $wsl5
bindsym $win+6 workspace $wsl6
bindsym $win+7 workspace $wsl7
bindsym $win+8 workspace $wsl8
bindsym $win+9 workspace $wsl9

# other movements
bindsym $mod+a focus parent
bindsym $mod+space focus mode_toggle
bindsym $mod+Tab workspace back_and_forth


#
# moving things around
#

# move container in workspace
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $wsr1
bindsym $mod+Shift+2 move container to workspace $wsr2
bindsym $mod+Shift+3 move container to workspace $wsr3
bindsym $mod+Shift+4 move container to workspace $wsr4
bindsym $mod+Shift+5 move container to workspace $wsr5
bindsym $mod+Shift+6 move container to workspace $wsr6
bindsym $mod+Shift+7 move container to workspace $wsr7
bindsym $mod+Shift+8 move container to workspace $wsr8
bindsym $mod+Shift+9 move container to workspace $wsr9

bindsym $win+Shift+1 move container to workspace $wsl1
bindsym $win+Shift+2 move container to workspace $wsl2
bindsym $win+Shift+3 move container to workspace $wsl3
bindsym $win+Shift+4 move container to workspace $wsl4
bindsym $win+Shift+5 move container to workspace $wsl5
bindsym $win+Shift+6 move container to workspace $wsl6
bindsym $win+Shift+7 move container to workspace $wsl7
bindsym $win+Shift+8 move container to workspace $wsl8
bindsym $win+Shift+9 move container to workspace $wsl9

# move workspace to other screen (assuming two monitors)
bindsym $mod+Shift+m move workspace to output right


#
# container manipulation
#

# container layout type
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# splitting
bindsym $mod+Shift+v split h
bindsym $mod+v split v

# other
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle

# set numbered workspaces to output 1 and letter workspaces to output 2
workspace $wsr1 output DVI-0
workspace $wsr2 output DVI-0
workspace $wsr3 output DVI-0
workspace $wsr4 output DVI-0
workspace $wsr5 output DVI-0
workspace $wsr6 output DVI-0
workspace $wsr7 output DVI-0
workspace $wsr8 output DVI-0
workspace $wsr9 output DVI-0

workspace $wsl1 output DVI-1
workspace $wsl2 output DVI-1
workspace $wsl3 output DVI-1
workspace $wsl4 output DVI-1
workspace $wsl5 output DVI-1
workspace $wsl6 output DVI-1
workspace $wsl7 output DVI-1
workspace $wsl8 output DVI-1
workspace $wsl9 output DVI-1


#
# other wm-related keybindings
#

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -m 'Exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+x exec xfce4-session-logout
bindsym $mod+Shift+q kill
bindsym $mod+r mode "resize"

mode "resize" {
    bindsym h resize shrink width 1 px or 1 ppt
    bindsym j resize grow height 1 px or 1 ppt
    bindsym k resize shrink height 1 px or 1 ppt
    bindsym l resize grow width 1 px or 1 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}


#
# per-application window preferences
#

for_window [title="Figure *"] floating enable
for_window [title="TeX Text"] floating enable
for_window [title="OpenGL Viewer"] floating enable
for_window [title="recordMyDesktop"] floating enable
for_window [class="Xfce4-notifyd"] floating enable; border none; focus mode_toggle
for_window [title="Blender User Preferences"] floating enable
for_window [class="Textext.py"] floating enable
for_window [title="PyGesture"] floating enable
for_window [title="MyoSwim"] floating enable
for_window [window_role="pop-up"] floating enable


#
# appearance
#

# color definitions
set $black    #202020
set $altblack #404040
set $darkgrey #444444
set $grey     #777777
set $purple   #4e3d41
set $red      #962521
set $blue     #3a4966
#set $white    #aaaaaa
set $white    #bbbbbb
set $darkblue #0f1b33
set $medblue  #122a3d
set $orange   #d64937

# class                 border    backgr.   text     indicator
client.focused          $blue     $blue     $white   $red
client.focused_inactive $black    $darkgrey $grey    $purple
client.unfocused        $black    $black    $white   $purple
client.urgent           $orange   $black    $white   $purple

bar {
    font pango: $barfont
    output DVI-0
    tray_output DVI-0
    position top
    status_command i3status | ~/bin/i3status-pango-injector
    workspace_buttons yes
    separator_symbol Â¦

    colors {
        background $blue
        statusline $white
        separator  $black

        # class            border    backgr.   text
        focused_workspace  $blue     $blue     $white
        active_workspace   $blue     $blue     $grey
        inactive_workspace $blue     $blue     $black
        urgent_workspace   $orange   $blue     $white
    }
}
bar {
    font pango: $barfont
    output DVI-1
    tray_output none
    position top

    colors {
        background $blue

        # class            border    backgr.   text
        focused_workspace  $blue     $blue     $white
        active_workspace   $blue     $blue     $grey
        inactive_workspace $blue     $blue     $black
        urgent_workspace   $orange   $blue     $white
    }
}


#
# launchers
#

bindsym $mod+Return exec urxvt -cd "`xcwd`" -e fish
bindsym $win+space exec dmenu_run -b -nb '$black' -nf '$grey' -sb '$blue' -sf '$white'
bindsym $win+f exec "xdg-open ~"
bindsym $win+Shift+f exec "xdg-open `xcwd`"
bindsym $win+w exec chromium
bindsym $mod+F12 exec amixer sset Master 2%+
bindsym $mod+F11 exec amixer sset Master 2%-
bindsym $mod+F10 exec amixer set Master toggle
bindsym $mod+Shift+s exec xfce4-settings-manager
bindsym Ctrl+Shift+x exec cmus-remote -u


#
# other keybindings
#

bindsym $win+s exec i3lock -i ~/img/wallpapers/cubes.png -t && sudo pm-suspend
bindsym $win+l exec i3lock -i ~/img/wallpapers/cubes.png -t
bindsym --release Print exec xfce4-screenshooter
