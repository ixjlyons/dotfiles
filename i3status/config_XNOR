general {
    colors = true
    interval = 1

    color_good = "#bbbbbb"
    color_degraded = "#b47344"
    color_bad = "#d64937"

    output_format = i3bar

    markup = "pango"
}

order += "disk /"
order += "wireless wlp3s0"
order += "battery 0"
order += "volume master"
order += "tztime date"
order += "tztime time"

disk "/" {
    # fa-folder-open
    format = "<span foreground='#777777'></span> %avail (%percentage_avail)"
    threshold_type = "percentage_avail"
    low_threshold = 20
}

wireless wlp3s0 {
    format_up = "<span color='#777777'></span> %essid (%ip)"
    format_down = "<span color='#777777'></span> (---.--.---)"
}

battery 0 {
    format = "<span color='#777777'></span>%status %percentage %remaining"
    path = "/sys/class/power_supply/BAT0/uevent"
    status_bat = ""
    status_chr = ""
    status_full = ""
    threshold_type = "time"
    low_threshold = 30
    hide_seconds = true
    integer_battery_capacity = true
}

volume master {
    format = "<span color='#777777'></span> %volume"
    format_muted = "<span color='#777777'></span> (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = "0"
}

tztime date {
    format = "<span foreground='#777777'></span> %Y-%m-%d"
}

tztime time {
    format ="<span foreground='#777777'></span> %H:%M"
}
